<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175.67dp"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="13.33dp"
            android:layout_marginEnd="13.33dp"
            android:layout_height="149dp">

            <TextView
                android:id="@+id/click_status"
                android:layout_width="20.67dp"
                android:layout_height="20.67dp"
                android:background="@drawable/shape_round_bluetextview"
                android:gravity="center"
                android:text="1"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                />


            <TextView
                android:id="@+id/deviceSeat"
                android:layout_width="match_parent"
                android:layout_height="16.44dp"
                android:layout_marginStart="33.67dp"
                android:textColor="#333333"
                android:text="设备位置：东机房"
                android:gravity="bottom"
                android:textSize="14.67sp"/>

            <TextView
                android:id="@+id/deviceName"
                android:layout_width="match_parent"
                android:layout_height="16.44dp"
                android:layout_marginStart="33.67dp"
                android:layout_marginTop="16.44dp"
                android:textColor="#333333"
                android:text="设备名称：服务器A"
                android:gravity="bottom"
                android:textSize="14.67sp"/>

            <TextView
                android:id="@+id/review"
                android:layout_width="match_parent"
                android:layout_height="16.44dp"
                android:layout_marginStart="33.67dp"
                android:layout_marginTop="33dp"
                android:textColor="#333333"
                android:text="巡视内容：服务器运行状态确认"
                android:gravity="bottom"
                android:textSize="14.67sp"/>



            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginStart="33.67dp"
                android:text="结论：正常"
                android:gravity="bottom"
                android:textColor="#333333"
                android:textSize="14.67sp"
                />
            <TextView
                android:id="@+id/remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginStart="33.67dp"
                android:text="备注：无"
                android:gravity="bottom"
                android:textColor="#333333"
                android:textSize="14.67sp"
                />














        </RelativeLayout>



    </LinearLayout>

</LinearLayout>