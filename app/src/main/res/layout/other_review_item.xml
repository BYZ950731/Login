<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84.67dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/submit_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16.67dp"
                android:layout_marginTop="16.33dp"
                android:text="通信网管机房日常巡视表"
                android:textSize="16.67sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/submit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16.67dp"
                android:layout_marginTop="38.67dp"
                android:text="巡视人:张三"
                android:textSize="12sp"
                android:alpha="0.7"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/submit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16.67dp"
                android:layout_marginTop="56.33dp"
                android:text="更新时间：2020-10-02  12:00:00"
                android:textSize="12sp"
                android:alpha="0.7"
                android:textColor="#333333"/>


        </RelativeLayout>

        <ImageView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.67dp"
            android:layout_marginRight="0dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/status_review"
            android:visibility="visible"/>


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/listview_click"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE" />


</LinearLayout>
