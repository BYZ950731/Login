<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3F424D">
    <ImageView
        android:id="@+id/login_title"
        android:layout_width="122dp"
        android:layout_height="24.33dp"
        android:layout_marginTop="102dp"
        android:layout_marginBottom="513.67dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/login_title"/>

    <RelativeLayout
        android:layout_width="266.67dp"
        android:layout_height="20dp"
        android:layout_marginTop="202.67dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/login_user"
            android:layout_width="12.67dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="298.67dp"
            android:src="@mipmap/login_user" />

        <EditText
            android:id="@+id/login_user_input"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginStart="30dp"
            android:background="@null"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:selectAllOnFocus="true"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:hint="@string/default_username">
        </EditText>
    </RelativeLayout>

        <TextView
            android:id="@+id/text_line"
            android:layout_centerHorizontal="true"
            android:layout_width="266.67dp"
            android:layout_height="0.33dp"
            android:layout_marginTop="230.33dp"
            android:background="#FFFFFF" />

    <RelativeLayout
            android:layout_width="266.67dp"
            android:layout_height="20dp"
            android:layout_marginTop="253dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/login_password"
                android:layout_width="12.67dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"

                android:src="@mipmap/login_password" />


            <EditText
                android:id="@+id/login_password_input"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:background="@null"
                android:textColor="#FFFFFF"
                android:inputType="textPassword"
                android:textColorHint="#FFFFFF"
                android:selectAllOnFocus="true"
                android:textSize="13sp"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:hint="@string/default_userpassword">
            </EditText>
        <ImageView
            android:id="@+id/password_eye"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="250dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/open_eye"
            android:visibility="visible"
            >


        </ImageView>



    </RelativeLayout>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="266.67dp"
            android:layout_height="0.33dp"
            android:layout_marginTop="280.67dp"
            android:background="#FFFFFF" />

    <RelativeLayout
        android:layout_width="266.67dp"
            android:layout_height="20dp"
            android:layout_marginTop="303.67dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/login_ip"
                android:layout_width="12.67dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/login_ip" />

            <EditText
                android:id="@+id/login_ip_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:background="@null"
                android:digits="0123456789."
                android:imeOptions="actionDone"
                android:textColorHint="#FFFFFF"
                android:selectAllOnFocus="true"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:hint="@string/default_login_ip">
            </EditText>
        </RelativeLayout>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="266.67dp"
            android:layout_height="0.33dp"
            android:layout_marginTop="330.67dp"
            android:background="#FFFFFF" />

    <ImageView
        android:id="@+id/login"
        android:layout_width="266.67dp"
        android:layout_height="40dp"
        android:layout_marginTop="397.33dp"
        android:layout_marginBottom="202.67dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/login" />
        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="397.33dp"
            android:layout_marginBottom="202.67dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            />
    </RelativeLayout>


    </LinearLayout>