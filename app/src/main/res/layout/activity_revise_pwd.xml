<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:background="#2E3039"
        >

        <ImageView
            android:id="@+id/pwd_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="17.33sp"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144.67dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="旧密码"
                android:textSize="14.67sp"
                android:textColor="#666666"
                android:gravity="center"/>

            <EditText
                android:id="@+id/old_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请填入旧密码"
                android:textSize="14.67sp"
                android:inputType="textPassword"
                android:background="@null"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="新密码"
                android:textSize="14.67sp"
                android:textColor="#666666"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/new_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请填入新密码"
                android:textSize="14.67sp"
                android:inputType="textPassword"
                android:background="@null"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="确认密码"
                android:textSize="14.67sp"
                android:textColor="#666666"
                android:gravity="center"/>

            <EditText
                android:id="@+id/new_twice_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请再次输入新密码"
                android:textSize="14.67sp"
                android:inputType="textPassword"
                android:background="@null"
                />

        </LinearLayout>







    </LinearLayout>

    <TextView
        android:id="@+id/pwd_conf"
        android:layout_width="281.33dp"
        android:layout_height="36.67dp"
        android:layout_marginTop="50dp"
        android:background="#B2B2B2"
        android:text="确定"
        android:textSize="17.33sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_gravity="center"/>

</LinearLayout>